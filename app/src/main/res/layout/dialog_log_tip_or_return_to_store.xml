<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dialog_log_tip_or_return_to_store"
>

    <Button
            android:id="@+id/log_cash_tip_button"
            android:text="@string/log_cash_tip"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
    />

    <Button
            android:id="@+id/return_to_store_button"
            android:text="@string/return_to_store"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/log_cash_tip_button"
    />

</RelativeLayout>