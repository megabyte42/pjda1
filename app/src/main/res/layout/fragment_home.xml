<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageButton
            android:id="@+id/fragment_home_imageButton_profile"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:background="@color/colorRed"
            android:src="@drawable/profile"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
    />

    <ImageButton
            android:id="@+id/fragment_home_imageButton_settings"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:background="@color/colorRed"
            android:src="@drawable/settings"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
    />

    <ImageView
            android:id="@+id/fragment_home_imageView_logo"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:background="@color/colorWhite"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

    />

    <ImageView
            android:id="@+id/fragment_home_imageView_top_green_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorGreen"
            android:layout_below="@id/fragment_home_imageView_logo"
    />

    <ImageView
            android:id="@+id/fragment_home_imageView_pizza_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza"
            android:clickable="true"
    />

    <ImageView
            android:id="@+id/fragment_home_imageView_bottom_green_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorGreen"
            android:layout_above="@id/fragment_home_button_recent_deliveries"
    />

    <Button
            android:id="@+id/fragment_home_button_recent_deliveries"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/recent_deliveries"
            android:textSize="30sp"
            android:background="@color/colorRed"
    />

</RelativeLayout>