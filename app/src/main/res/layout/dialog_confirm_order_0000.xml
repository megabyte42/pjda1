<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorOrange"
                android:padding="32dp"
>

    <Button
            android:id="@+id/dialog_confirm_order_button"
            android:text="Got It!"
            android:background="@color/colorOrange"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
    />

    <TextView
            android:id="@+id/order_id_text"
            android:text="@string/order_id0"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_confirm_order_button"
    />

    <TextView
            android:id="@+id/dialog_confirm_order_items_text"
            android:text="@string/large_cheese"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24sp"
    />


</RelativeLayout>